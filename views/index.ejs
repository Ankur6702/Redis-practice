<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redis Task Manager</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">

    <style>
        .del:checked+span {
            color: red;
        }

        .task-list {
            list-style: none;
        }

        .box {
            margin-top: 1.5vw;
        }

        .well {
            background-color: #e7e9eb;
            padding: 1vw;
        }

        .copyright {
            padding: 2vw;
            background-color: black;
            color: white;
            text-align: center;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Redis Task Manager</a>
        </div>
    </nav>

    <div class="container">
        <div class="box">
            <form action="/task/add" method="POST">
                <!-- <input type="text" name="task" placeholder="Add Task">
                <input type="submit" class="btn btn-primary" value="Submit"> -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="task" placeholder="Add Task"
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="submit" id="button-addon2">Add</button>
                </div>
            </form>
        </div>
        <div class="box">
            <h3>
                <%= title %>
            </h3>
            <form action="/task/delete" method="POST">
                <ul class="task-list">
                    <% tasks.forEach(function(task) { %>
                        <li>
                            <label>
                                <input type="checkbox" name="tasks" value="<%= task %>" class="del">
                                <span>
                                    <%= task %>
                                </span>
                            </label>
                        </li>
                        <% }) %>
                </ul>
                <input type="submit" class="btn btn-primary" value="Remove">
            </form>
        </div>

        <div class="well box">
            <h3>Next Meeting</h3>
            Name: <%= call.name %><br>
                Location: <%= call.location %><br>
                    Phone: <%= call.phone %><br>
                        Time: <%= call.time %>
        </div>
        <div class="well box">
            <h3>Edit Next Meeting</h3>
            <form action="/call/add" method="POST">
                <label>Contact Name</label><br>
                <input type="text" name="name" placeholder="Task Name">
                <br><br>
                <label>Location</label><br>
                <input type="text" name="location" placeholder="Location">
                <br><br>
                <label>Phone</label><br>
                <input type="text" name="phone" placeholder="Phone">
                <br><br>
                <label>Date & Time</label><br>
                <input type="text" name="time" placeholder="Time">
                <br><br>
                <input type="submit" class="btn btn-primary" value="Update Meeting">
            </form>
        </div>
    </div>
    <footer class="copyright">
        <span>Made by Ankur Agarwal</span>
    </footer>
</body>

</html>